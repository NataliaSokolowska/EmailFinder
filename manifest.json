{
  "manifest_version": 3,
  "name": "Email Finder",
  "version": "1.0",
  "description": "Finds and extracts contact emails from web pages.",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "clipboardRead"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ]
}
